<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <% if current_user.git_key.nil? %>
    <%= link_to 'Connect To Github', '/auth/github', class: "btn btn-primary mb1 bg-teal" %>
  <% end %>

  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>

  <% if current_user.git_key %>
  <section class='github'>
    <h2>Github</h2>
    <h4>Repositories</h4>
      <div class='repositories'>
      <% facade.repos(5).each do |repo| %>
        <ul class='repository'>
          <li class='repo-link'><%= link_to repo.name, repo.url %></li>
        </ul>
      <%end%>
    </div>
    <h4>Followers</h4>
    <div class='followers'>
      <% facade.followers(5).each do |follower| %>
      <ul class='follower'>
        <li class='profile-link'><%= link_to follower.name, follower.url %>
        <% if follower.add_friend? %>
          <%= link_to "Add Friend", add_friend_path(git_id: follower.git_id), class: 'friend-link'%>
        <% end %></li>
      </ul>
      <% end %>
    </div>
    <h4>Following</h4>
    <div class='followed'>
      <% facade.followed(5).each do |single_followed| %>
      <ul class='single_followed'>
        <li class='profile-link'><%= link_to single_followed.name, single_followed.url %></li>
      </ul>
        <% end %>
    </div>
  </section>
  <% end %>


</section>
